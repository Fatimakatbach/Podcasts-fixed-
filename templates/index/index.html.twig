{% extends 'base.html.twig' %}

{% block contenedor_principal %}
{% include 'comunes/_mensajes.html.twig' %}
    <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">
    Mis podcasts
    </h6>

   
    {% for podcast in podcasts %}
      <div class="media text-muted pt-3">
        <svg width="32" height="32" class="mr-2 rounded">
          <rect width="32" height="32" style="fill:{{ podcast.imagen }};" />
        </svg>
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">  
          <div class="d-flex justify-content-between align-items-center w-100">
            <div> 
              <a href="app_podcast_show" target="_blank">
                <strong class="text-dark">{{ podcast.titulo }}</strong>
              </a>
              <span class="d-block">{{ podcast.descripcion }}</span>
            </div>
            <div class="d-flex">
               <a href="#"
                class="btn btn-link mg-3 favorito {{ podcast.favorito ? 'activo' }}" >
                <span class="oi oi-star" title="Favorito" aria-hidden="true"/>
              </a>
              <a href="{{ path('app_podcast_edit', {id: podcast.id}) }}" class="btn btn-link mg-3">
                <span class="oi oi-pencil" title="Edit" aria-hidden="true"></span>
              </a>

               {{ include('podcast/_delete_form.html.twig') }}

            </div>
        </div>
      </div>
      </div>
    {% else %} 
    <p>no podcasts found</p>
    {% endfor %}
  </div>
{% endblock %}

